{
  "name": "@eatsjobs/recorder-audio",
  "private": false,
  "version": "1.0.2",
  "description": "A simple audio recorder",
  "main": "dist/recorder.js",
  "umd:main": "dist/recorder.umd.js",
  "module": "dist/recorder.mjs",
  "source": "index.js",
  "scripts": {
    "version": "yarn build && git add -Af dist",
    "postversion": "git push && git push --tags",
    "build": "microbundle --entry recorder.js",
    "build:watch": "microbundle --entry --compress=false --watch recorder.js",
    "dev": "http-server ."
  },
  "files": [
    "/dist"
  ],
  "keywords": [
    "html5",
    "audio"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^0.11.1",
    "microbundle": "^0.9.0",
    "normalize.css": "^8.0.1",
    "md-gum-polyfill": "^1.0.0"
  },
  "peerDependencies": {
    "md-gum-polyfill": "^1.0.0"
  }
}
